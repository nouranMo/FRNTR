    <script>
      
// Get the email input, subscribe button, and message container elements
const emailInput = document.getElementById("emailInput");
const subscribeButton = document.getElementById("subscribeButton");
const messageContainer = document.getElementById("messageContainer");

// Email format validation regex
const emailRegex = /^[^\s@]+@[^\s@]+\.[^\s@]+$/;

// Add event listener to the subscribe button
subscribeButton.addEventListener("click", () => {
  // Get the email value
  const email = emailInput.value;

  // Validate the email format
  if (!emailRegex.test(email)) {
    // Display an error message if the email format is invalid
    messageContainer.textContent = "Please enter a valid email address.";
    messageContainer.style.color = "red";
    return; // Exit the function
  }

  // Create a data object with the email value
  const data = { email };

  // Send a POST request to your server
  fetch("/addemail", {
    method: "POST",
    headers: {
      "Content-Type": "application/json",
    },
    body: JSON.stringify(data),
  })
    .then((response) => response.json())
    .then((result) => {
      console.log(result);
      // Clear the email input
      emailInput.value = "";

      // Display success message
      messageContainer.textContent = "Added to newsletter!";
      messageContainer.style.color = "green";
    })
    .catch((error) => {
      console.error(error);
      // Handle any errors that occur during the request
    });
});

