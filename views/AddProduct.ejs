<!DOCTYPE html>
<html lang="en">
<head>
    <link rel="stylesheet" href="../CSS/admin.css">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://fonts.googleapis.com/css2?family=Poppins&display=swap" rel="stylesheet">

    <link rel="stylesheet" href="https://fonts.googleapis.com/icon?family=Material+Icons">

    <style>
        .material-symbols-outlined {
            font-variation-settings:
                'FILL' 0,
                'wght' 400,
                'GRAD' 0,
                'opsz' 48
        }


        .sidebar a.products {
            background-color: black;
            color: white;
        }

        .sidebar a:hover:not(.products) {
            background-color: #555;
            color: white;
        }
    </style>
    <title>Admin Add Product</title>
</head>
<body>
    <div class="sideCon">
        <%- include("./partials/adminnav.ejs")%>
        <div class="header">
            <h2>Add an Item</h2>
        </div>
        <div class="gallery">
            <div class="row">
                <div class="background">
                    <div class="containerform">
                        <!-- /////////////////delete////////////////// -->
                        <form class="form" action="/furniture" method="post" onsubmit="return validate(event)" enctype="multipart/form-data">
                            <div class="rowform">
                              <div class="col-25">
                                <label for="productname">Product Name</label>
                              </div>
                              <div class="col-75">
                                <input type="text" id="productname" name="productname" placeholder="Enter the product name..">
                                <div id="nameid" class="err"></div>
                              </div>
                            </div>
                            <div class="rowform">
                              <div class="col-25">
                                <label for="category">Category</label>
                              </div>
                              <div class="col-75">
                                <select id="category" name="category">
                                  <option value="armchair">Armchair</option>
                                  <option value="beds">Beds</option>
                                  <option value="benches">Benches</option>
                                  <option value="beanbags">Bean Bags</option>
                                  <option value="chaise lounges">Chaise Lounges</option>
                                  <option value="living room set">Living Room Set</option>
                                  <option value="kids furniture">Kids Furniture</option>
                                  <option value="pets furniture">Pets Furniture</option>
                                  <option value="space friendly">Space Friendly</option>
                                </select>
                                <div id="categoryid" class="err"></div>
                              </div>
                            </div>
                            <div class="rowform">
                              <div class="col-25">
                                <label for="color">Choose the color available</label>
                              </div>
                              <div class="col-75">
                                <input type="text" id="color" name="color" placeholder="Enter the available color..">
                                <div id="colorid" class="err"></div>
                              </div>
                            </div>
                            <div class="rowform">
                              <div class="col-25">
                                <label for="price">Price</label>
                              </div>
                              <div class="col-75">
                                <input type="number" min="0.01" step="0.01" id="price" name="price" placeholder="Enter the price..">
                                <div id="priceid" class="err"></div>
                              </div>
                            </div>
                            <div class="rowform">
                              <div class="col-25">
                                <label for="quantity">Quantity</label>
                              </div>
                              <div class="col-75">
                                <input type="number" min="1" step="1" id="quantity" name="quantity" placeholder="Enter the quantity..">
                                <div id="quantityid" class="err"></div>
                              </div>
                            </div>
                            <div class="rowform">
                              <div class="col-25">
                                <label for="comments">Comments</label>
                              </div>
                              <div class="col-75">
                                <textarea id="comments" name="comments" placeholder="Leave any comments you have about the product..." style="height:200px"></textarea>
                              </div>
                            </div>
                            <div class="rowform">
                              <div class="col-25">
                                <label for="photo">Provide Photo of the product</label>
                              </div>
                              <div class="col-65">
                                <input type="file" id="photo" name="photo" accept=".jpg, .jpeg, .png" multiple onchange="validateImageFiles(this)">
                                <p id="fileStatus"></p>
                              </div>
                            </div>
                            <div class="rowform">
                              <input type="submit" id="submitBtn" value="Submit">
                            </div>
                            <div class="rowform">
                              <% if (typeof successMessage !== 'undefined' && successMessage) { %>
                              <p style="color: green"><%= successMessage %></p>
                              <% } %>
                              <% if (typeof failMessage !== 'undefined' && failMessage) { %>
                              <p style="color:red"><%= failMessage %></p>
                              <% } %>
                            </div>
                          </form>                          
                    </div>
                </div>
            </div>
        </div>
    </div>
        <h3 id="subhead">Recently Added Products</h3>
        <div class="row">
            <div class="content">
                <section class="hoveringimgs">
                    <div class="box">
                        <img src="../Images/malia_5.webp" class="hoveredimg" alt="Avatar" style="width:100%">
                        <img src="../Images/malia_3.webp" alt="texture" class="hover_img" style="width:100%">
                    </div>
                    <div class="container">
                        <h4><b>Malia Vanity Stool Chair</b></h4>
                        <p>Hover function</p>
                    </div>
                </section>
            </div>
            <div class="content">
                <section class="hoveringimgs">
                    <div class="box">
                        <img src="../Images/NylaBabyBlue2.webp" class="hoveredimg" alt="Avatar" style="width:100%">
                        <img src="../Images/NylaBabyBlue3.webp" alt="texture" class="hover_img" style="width:100%">
                    </div>
                    <div class="container">
                        <h4><b>Nyla Baby Blue</b></h4>
                        <p>19200 EGP</p>
                    </div>
                </section>
            </div>
        </div>
    </div>
</div>
<script src="../JS/admin.js"></script>
</body>
</html>