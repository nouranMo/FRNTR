<body>

    <%- include("./partials/nav.ejs")%>
    <div class="signup1">
        <p class="sign1">Edit Profile</p>
    </div>

    <div class="sign1">
        <form name="sign-in" action="/auth/SignUp" method="post" onsubmit="return validate(this)">
            <input type="hidden" name="userType" value="client">
          
            <input id="fir" type="text" class="elemen" name="Firstname" placeholder="First Name" value="<%= user.firstName %>">
            <div id="first" class="err"><%= errors && errors.firstname ? errors.firstname : '' %></div>
          
            <input id="las" type="text" class="elemen" name="last" placeholder="Last Name" value="<%= user.lastName %>">
            <div id="last" class="err"><%= errors && errors.lastname ? errors.lastname : '' %></div>
          
            <input id="ema" type="email" class="elemen" name="email" placeholder="Email" value="<%= user.email %>">
            <div id="em" class="err"><% if(errors && errors.email) { %>
                <%=errors.email%> 
                <%}%>
            </div>

            <input id="add" type="text" class="elemen" name="address" placeholder="Address" value="<%= user.address %>">
            <div id="ad" class="err"><%= errors && errors.address ? errors.address : '' %></div>

            <input id="add2" type="text" class="elemen" name="address2" placeholder="Address 2" value="<%= user.address2 %>">
            <div id="ad2" class="err"></div>
          
            <input class="subm" type="submit" value="Edit"><br>
          </form>
          
    </div>
    </div>
    <%- include("./partials/chat.ejs")%>
    <%- include("./partials/footer.ejs")%>
    <script type="text/javascript" src="../js/handler.js"></script>
    <script type="text/javascript" src="../js/validations.js"></script>

</body>

