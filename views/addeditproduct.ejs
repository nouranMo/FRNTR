            }

            .sidebar a {
                float: left;
            }

            div.contenty {
                margin-left: 0;
                /* padding: 0; */
            }
        }
        

        @media screen and (max-width: 400px) {
            .sidebar a {
                text-align: center;
                float: none;
            }
        }

        .material-symbols-outlined {

            font-variation-settings:
                'FILL' 0,
                'wght' 400,
                'GRAD' 0,
                'opsz' 48
        }


        .sidebar a.dashboard {
            background-color: black;
            color: white;
        }

        .sidebar a:hover:not(.dashboard) {
            background-color: #555;
            color: white;
        }
        @media screen and(max-width: 2497){
            .sidebar {
                width: 100%;
                height: auto;
                position: relative;
                
            }

            .sidebar a {
                float: left;
            }

            div.contenty {
                margin-left: 325;
                padding: 25;
            }
        }
