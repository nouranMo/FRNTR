<!DOCTYPE html>
<html lang="en">

<head>
  <link rel="stylesheet" href="../css/admin.css" />
  <link rel="stylesheet" href="../css/cartsidebar.css" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <link href="https://fonts.googleapis.com/css2?family=Poppins&display=swap" rel="stylesheet" />
  <link rel="stylesheet" href="https://fonts.googleapis.com/icon?family=Material+Icons" />
  <style>
    .sidebar a.stat {
      background-color: black;
      color: white;
    }

    .sidebar a:hover:not(.stat) {
      background-color: #555;
      color: white;
    }
  </style>
  <title>Admin Statistics</title>
</head>

<body>
  <%- include("./partials/adminsidebar.ejs")%>

    <div class="contenty">
      <%- include("./partials/adminnav.ejs")%>
        <div class="sideCon">
          <div class="header">
            <h2>Your Store's Statistics</h2>
            <h3 id="subhead">Your Top Selling Products</h3>
          </div>
          <div class="gallery">
              <% if (topSoldProducts && topSoldProducts.length> 0) { %>
              <div class="row">
                <% topSoldProducts.forEach((product)=> { %>
                  <div class="content">
                    <div class="product-image">
                      <% if (product.imagePath && product.imagePath.length> 0) { %>
                        <% product.imagePath.forEach((path)=> { %>
                          <img src="<%= path %>" class="pic-1" style="width: 100%" />
                          <% console.log("hello Image from offer Path:", path); %>
                            <img src="<%= path %>" class="pic-2" style="width: 100%" />
                            <% }); %>
                              <% } %>
                    </div>
                    <div class="container">
                      <h4><b>
                          <%= product.productName %>
                        </b></h4>
                      <p>
                        <%= product.sold %> item sold
                      </p>
                    </div>
                  </div>
                  <% }); %>

                    <% } %>
                   </div> 
              <h3 id="subhead">Your Worst Selling Products</h3>
              <% if (worstSoldProducts && worstSoldProducts.length> 0) { %>
                <div class="row">
                  <% worstSoldProducts.forEach((product)=> { %>
                    <div class="content">
                      <div class="product-image">
                        <% if (product.imagePath && product.imagePath.length> 0) { %>
                          <% product.imagePath.forEach((path)=> { %>
                            <img src="<%= path %>" class="pic-1" style="width: 100%" />
                            <% console.log("hello Image from offer Path:", path); %>
                              <img src="<%= path %>" class="pic-2" style="width: 100%" />
                              <% }); %>
                                <% } %>
                      </div>
                      <div class="container">
                        <h4><b>
                            <%= product.productName %>
                          </b></h4>
                        <p>
                          <%= product.sold %> item sold
                        </p>
                      </div>
                    </div>
                    <% }); %>
  
                      <% } %>
                     </div> 
          </div>
          <%- include('./partials/chat.ejs')%>
        </div>
</body>

</html>